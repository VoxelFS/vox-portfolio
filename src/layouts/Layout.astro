---
const { title } = Astro.props;
---


<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="container pl-6 pt-3 font-extrabold text-4xl md:fixed">
			<a href="/"><span class="hover:cursor-pointer">ol</span></a>
		</div>
		<slot />
		<div class="pl-6 font-bold text-l text-cgrey fixed bottom-3">
			<span class="hover:cursor-pointer">.theme</span>
		</div>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
