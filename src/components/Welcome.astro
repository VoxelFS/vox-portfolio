	</div>
	<div class="pl-8 pr-8 pt-3 text-l w-full md:w-4/5 md:pl-16 text-text">
		fourth year computer science student at the university of auckland.
	</div>
	<div class="pl-8 pt-4 md:pl-16 md:pt-10">
		<a
			href="https://github.com/VoxelFS"
			target="_blank"
			class="relative text-textAccent hover:after:content-['[↗]'] hover:after:ml-1"
		>
			github
		</a>
	</div>
	<div class="pl-8 pt-1 md:pl-16">
		<a
			href="https://www.linkedin.com/in/owenli0922/"
			target="_blank"
			class="relative text-textAccent hover:after:content-['[↗]'] hover:after:ml-1 "
		>
			linkedin
		</a>
	</div>
	<div class="pl-8 pt-1 md:pl-16" id="email-container">
		<button
			id="email-button"
			class="relative text-textAccent hover:after:content-['[+]'] after:ml-1"
		>
			email
		</button>
	</div>
</div>


<script>
	const button = document.getElementById("email-button");

	if (button) {
		button.addEventListener("click", () => {
			const email: string = "owen.li0922@gmail.com";
			navigator.clipboard.writeText(email).then(() => {
				button.classList.remove("hover:after:content-['[+]']");
				button.classList.add("after:content-['[COPIED]']");
			});
		});

		button.addEventListener("mouseout", () => {
			button.classList.remove("after:content-['[COPIED]']");
			button.classList.add("hover:after:content-['[+]']");
		});
	}
</script>
